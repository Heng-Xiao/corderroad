blockquote {
  margin: 1em 0;
  padding: 1em 1.5em;
  border-radius: 15px;
  border-left: 4px solid #5fbfea;
  background-color: #e3f2fb;
  font-size: 0.9em;
  line-height: 1.6;
  color: #333;
  quotes: "\201C""\201D""\2018""\2019";
}
blockquote::first-line {
  font-weight: bold;
  //color: #ff9800;
  font-size: 1.2em;
}
blockquote p::before {
  content: "•";
  font-size: 20px;       /* 设置项目符号的大小 */
  color: #333;
  margin-right: 5px;
}

blockquote p strong {
  font-weight: bold;
  font-size: 1.1em;
}

blockquote p:first-child::before {
  content: "";
}

blockquote p {
  margin-top: 0em;
  margin-bottom: 1em;
}

blockquote cite {
  display: block;
  text-align: right;
  color: #DA5961;
  font-size: 0.9em;
}

